<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurant_food_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".category.view.FastFoodsActivity"></activity>
        <activity android:name=".category.view.DrinksActivity" />
        <activity android:name=".category.view.FoodActivity" />
        <activity android:name=".home.view.MenuProducts" />
        <activity android:name=".home.view.ItemCategoryActivity" />
        <activity android:name=".home.view.DetailPlaceActivity" />
        <activity android:name=".main.NavigationBar" />
        <activity android:name=".main.LoginActivity" />
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>